  "item": [
    {
      "name": "会员管理",
      "item": [
        {
          "name": "添加会员",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"张三\",\n  \"phone\": \"13800138001\",\n  \"balance\": 100.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/members",
              "host": ["{{base_url}}"],
              "path": ["members"]
            },
            "description": "创建新会员，phone必须是11位数字，balance可选（默认为0）"
          }
        },
        {
          "name": "查询会员列表",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT认证令牌"
              }
            ],
            "url": {
              "raw": "{{base_url}}/members",
              "host": ["{{base_url}}"],
              "path": ["members"]
            },
            "description": "获取所有会员列表，需要认证"
          }
        },
        {
          "name": "查询会员详情",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT认证令牌"
              }
            ],
            "url": {
              "raw": "{{base_url}}/members/1",
              "host": ["{{base_url}}"],
              "path": ["members", "1"]
            },
            "description": "获取指定ID的会员详细信息，需要认证"
          }
        },
        {
          "name": "修改会员信息",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT认证令牌"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"李四\",\n  \"phone\": \"13900139001\",\n  \"balance\": 200.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/members/1",
              "host": ["{{base_url}}"],
              "path": ["members", "1"]
            },
            "description": "修改会员信息，可以只提供需要更新的字段。例如，只更新姓名：{\"name\": \"李四\"}"
          }
        },
        {
          "name": "删除会员",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT认证令牌"
              }
            ],
            "url": {
              "raw": "{{base_url}}/members/1",
              "host": ["{{base_url}}"],
              "path": ["members", "1"]
            },
            "description": "删除指定ID的会员，需要管理员权限。如果会员正在使用机位，则无法删除。"
          }
        },
        {
          "name": "会员充值",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT认证令牌"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 50.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/members/1/recharge",
              "host": ["{{base_url}}"],
              "path": ["members", "1", "recharge"]
            },
            "description": "为会员账户充值指定金额，amount必须是大于0的数字"
          }
        }
      ]
    },
