    {
      "name": "上机记录管理",
      "item": [
        {
          "name": "获取所有上机记录",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usage-records",
              "host": ["{{base_url}}"],
              "path": ["usage-records"],
              "query": [
                {
                  "key": "member_id",
                  "value": "1",
                  "description": "会员ID"
                },
                {
                  "key": "start_date",
                  "value": "2025-09-01",
                  "description": "开始日期"
                },
                {
                  "key": "end_date",
                  "value": "2025-09-14",
                  "description": "结束日期"
                },
                {
                  "key": "status",
                  "value": "active",
                  "description": "状态：active(进行中)或completed(已完成)"
                }
              ]
            }
          }
        },
        {
          "name": "获取单个上机记录详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usage-records/1",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "1"]
            }
          }
        },
        {
          "name": "开始上机",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"member_id\": 1,\n  \"machine_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/usage-records/start",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "start"]
            }
          }
        },
        {
          "name": "结束上机",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"record_id\\\": 1\\n}"
            },
            "url": {
              "raw": "{{base_url}}/usage-records/end",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "end"]
            }
          }
        },
        {
          "name": "获取特定会员的上机记录",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usage-records/member/1",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "member", "1"]
            }
          }
        },
        {
          "name": "统计上机记录",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usage-records/stats/summary",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "stats", "summary"],
              "query": [
                {
                  "key": "start_date",
                  "value": "2025-09-01",
                  "description": "开始日期"
                },
                {
                  "key": "end_date",
                  "value": "2025-09-14",
                  "description": "结束日期"
                }
              ]
            }
          }
        },
        {
          "name": "按机位统计使用情况",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usage-records/stats/machines",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "stats", "machines"],
              "query": [
                {
                  "key": "start_date",
                  "value": "2025-09-01",
                  "description": "开始日期"
                },
                {
                  "key": "end_date",
                  "value": "2025-09-14",
                  "description": "结束日期"
                }
              ]
            }
          }
        },
        {
          "name": "按会员统计使用情况",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usage-records/stats/members",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "stats", "members"],
              "query": [
                {
                  "key": "start_date",
                  "value": "2025-09-01",
                  "description": "开始日期"
                },
                {
                  "key": "end_date",
                  "value": "2025-09-14",
                  "description": "结束日期"
                }
              ]
            }
          }
        },
        {
          "name": "批量删除上机记录",
          "request": {
            "method": "DELETE",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"record_ids\\\": [1, 2, 3]\\n}"
            },
            "url": {
              "raw": "{{base_url}}/usage-records/batch",
              "host": ["{{base_url}}"],
              "path": ["usage-records", "batch"]
            }
          }
        }
      ]
    },
    {
